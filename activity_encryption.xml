<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_encryption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ibm.PageMe.encryption">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/vw2"
        android:layout_alignBaseline="@+id/vw1"
        android:layout_alignBottom="@+id/vw1"
        android:layout_toEndOf="@+id/vw1"
        android:layout_alignStart="@+id/bn2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/ser"
        android:layout_marginBottom="47dp"
        android:hint="Type your Password"
        android:layout_above="@+id/bn2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/vw1"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/bn1" />

    <Button
        android:text="Encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bn1"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/vw1"
        android:layout_toStartOf="@+id/bn2"
        android:layout_marginEnd="43dp" />

    <Button
        android:text="Decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:id="@+id/bn2"
        android:layout_alignBaseline="@+id/bn1"
        android:layout_alignBottom="@+id/bn1"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
