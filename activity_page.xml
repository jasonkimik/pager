<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:id="@+id/numberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker1"
        android:layout_alignBottom="@+id/numberPicker1"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker1" />

    <NumberPicker
        android:id="@+id/numberPicker3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker2"
        android:layout_alignBottom="@+id/numberPicker2"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker2" />

    <NumberPicker
        android:id="@+id/numberPicker4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker3"
        android:layout_alignBottom="@+id/numberPicker3"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker3" />

    <NumberPicker
        android:id="@+id/numberPicker5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker4"
        android:layout_alignBottom="@+id/numberPicker4"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker4" />

    <NumberPicker
        android:id="@+id/numberPicker6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker5"
        android:layout_alignBottom="@+id/numberPicker5"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker5" />

    <NumberPicker
        android:id="@+id/numberPicker7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker6"
        android:layout_alignBottom="@+id/numberPicker6"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker6" />

    <NumberPicker
        android:id="@+id/numberPicker8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker7"
        android:layout_alignBottom="@+id/numberPicker7"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker7" />

    <NumberPicker
        android:id="@+id/numberPicker9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker8"
        android:layout_alignBottom="@+id/numberPicker8"
        android:descendantFocusability="blocksDescendants"
        android:layout_toEndOf="@+id/numberPicker8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:id="@+id/tv"
        android:visibility="gone"
        android:layout_toEndOf="@+id/numberPicker1" />

    <ImageButton
        app2:srcCompat="@drawable/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/tasgyl" />

    <ImageButton
        app2:srcCompat="@drawable/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tasgyl"
        android:layout_alignEnd="@+id/numberPicker9"
        android:id="@+id/setting"
        android:layout_alignTop="@+id/tasgyl"
        android:layout_toEndOf="@+id/numberPicker8" />

    <ImageButton
        app2:srcCompat="@drawable/msgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resala"
        android:layout_alignTop="@+id/tasgyl"
        android:layout_toStartOf="@+id/numberPicker3"
        android:layout_marginEnd="21dp" />


</RelativeLayout>